{
    "name": "PySpark",
    "dockerFile": "Dockerfile",
    "customizations": {
        "vscode": {
            "settings": {
                "python.pythonPath": "/usr/local/spark/python",
                "python.linting.pylintEnabled": true,
                "python.linting.enabled": true,
                "terminal.integrated.profiles.linux": {
                    "bash": {
                      "path": "/bin/bash",
                      "args": [
                        "-l"
                      ]
                    }
                  }
              },
            "extensions": ["ms-python.python"]
        }
    },
    "forwardPorts": [],
    "remoteUser": "codespace",
    "mounts": [
      "source=${localWorkspaceFolder}/data,target=/workspaces/PySpark/data,type=bind,consistency=cached"
    ],
    "runArgs": [
      "--cap-add=SYS_ADMIN"
    ]
  }
  